page {
  background-color: #eee;
  font-size: 28rpx;
}

.container {
  margin-top: 80px;
  padding: 20rpx;
  box-sizing: border-box;
}

.top {
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rp 5rp #e9e9e9;
}

.one_list {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}

input {
  width: 450rpx;
}

.change{
  display: flex;
  align-items: center
}


.btn {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  margin-top: 40rpx;
  background: linear-gradient(to right, #22a0ff, #007ce7);
  border-radius: 15rpx;
  box-shadow: 0 5rpx 5rpx #8ccaf6;
}